@model List<MaxService.Models.Cliente.Registro>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaxService</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>

<body class="col-12 d-flex flex-wrap">
    <h1 >Orden De Compra</h1>

    @foreach (var item in Model)
    {
        <div class="titulo">
            <img  style="border-radius: 150px;width: 50px;height: 50px; "src="@item.Adjunto">
        </div>

        <div class="row-6">
            <p><br></p>
            <p></p>
            <p></p>
            <p>Nombre y Apellido&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.Nombre @item.Apellido</p>
            <p>Proveedor&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: ServiMAQ A&C S.A.C.</p>
            <p>Documento&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.Documento</p>
            <p>Fecha de Orden&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.FechaActual</p>
            <p>Correo&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.Correo</p>
            <p>Lugar de entrega&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.DireccionEntrega</p>
            <p>Modo de Pago &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.ModoPago</p>
            <p>Tiempo de Pago  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.PlazoPago dias</p>
            <p>Fecha de Entrega &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp: @item.FechaEntrega</p>

            <p><br></p>
            <table class="table border">
                <tr>
                    <th>Tipo de llanta</th>
                    <th>Marca</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                </tr>
                <tr>
                    <td>Llanta de jebe</td>
                    <td>Dumblop</td>
                    <td >10</td>
                    <td>10.000 S/.</td>
                </tr>
                <tr>
                    <td>Llanta de jebe</td>
                    <td>Continent.</td>
                    <td>4</td>
                    <td>4.000 S/.</td>
                </tr>
                <tr>
                    <td>Llanta de jebe</td>
                    <td>Pierelli</td>
                    <td>1</td>
                    <td>1.000 S/.</td>
                </tr>
            </div>
    }
    
</body>
