@model List<MaxService_1.Models.Producto.MedidaLlanta>

<div class="text-center container row-1 my-4">
    <h1 class="text-white" style="margin-bottom: 5%;">Lista de Medidas de Llantas</h1>
</div>

<table class="text-center table">
    <tr>
        <th>Id</th>
        <th>Ancho</th>
        <th>Diametro</th>
        <th>Perfil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MedidaLlantaId</td>
            <td>@item.Ancho</td>
            <td>@item.Diametro</td>
            <td>@item.Perfil</td>

            <td>
                <a href="/Administrador/ModificarMedidaLlanta/@item.MedidaLlantaId" class="btn btn-secondary"> <img src="/img/logos/logoEditar.png" width="25px"> </a>
                <form action="/Administrador/EliminarMedidaLlanta" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.MedidaLlantaId" />
                    <button class="btn btn-secondary"><img src="/img/logos/logoBorrar.png" width="25px"></button>
                </form>
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="12" class="text-center">
                <h3 style="color: blue;" class="m-5"> Upps... Parece que no tenemos medidas de nuestras llantas</h3>
            </td>
        </tr>
    }
</table>

