@model List<MaxService_1.Models.Producto.Llanta>

<div class="text-center container row-1 my-4">
    <h1 style="margin-bottom: 5%;">Lista Llantas</h1>
</div>

<table class="text-center table">
    <tr>
        <th>Id</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Id Detalle Llanta</th>
        <th>Id Vehiculo</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.LlantaId</td>
            <td>@item.Precio</td>
            <td>@item.Stock</td>
            <td>@item.DetalleLlantaId</td>
            <td>@item.VehiculoId</td>
            <td>
                <a href="/Administrador/ModificarLlanta/@item.LlantaId" class="btn btn-secondary"> <img src="/img/logos/logoEditar.png" width="25px"> </a>
                <form action="/Administrador/EliminarLlanta" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.LlantaId" />
                    <button class="btn btn-secondary"><img src="/img/logos/logoBorrar.png" width="25px"></button>
                </form>
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="12" class="text-center">
                <h3 style="color: blue;" class="m-5"> Upps... Parece que no tenemos Llantas nuevas</h3>
            </td>
        </tr>
    }
</table>

