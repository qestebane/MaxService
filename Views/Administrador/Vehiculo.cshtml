<div class="text-center container row-1 my-4">
    <h1 class="text-white" style="margin-bottom: 5%;">Lista de Vehiculos</h1>
</div>

<table class="text-center table">
    <tr>
        <th>Id</th>
        <th>Tipo</th>
        <th>Foto</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.VehiculoId</td>
            <td>@item.TipoVehiculo</td>
            <td><img src="@item.FotoVehiculo" width="150px"> </td>
            <td>
                <a href="/Administrador/ModificarVehiculo/@item.VehiculoId" class="btn btn-secondary"> <img src="/img/logos/logoEditar.png" width="25px"> </a>
                <form action="/Administrador/EliminarVehiculo" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.VehiculoId" />
                    <button class="btn btn-secondary"><img src="/img/logos/logoBorrar.png" width="25px"></button>
                </form>
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="12" class="text-center">
                <h3 style="color: blue;" class="m-5"> Upps... Parece que no tenemos Vehiculos</h3>
            </td>
        </tr>
    }
</table>

